<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/batman"
    tools:context=".MainUI.ManpowerDetailsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/detailImgView"

        android:layout_width="172dp"
        android:layout_height="153dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/noimage" />


    <TextView
        android:id="@+id/lblprice"
        style="@style/TextandLayout"

        android:layout_width="188dp"
        android:layout_height="64dp"
        android:layout_below="@+id/lblname"
        android:layout_alignStart="@+id/detailPrice"
        android:layout_alignLeft="@+id/detailPrice"
        android:layout_marginStart="-190dp"
        android:layout_marginLeft="-190dp"
        android:layout_marginTop="43dp"
        android:background="@drawable/editxml1"
        android:text="Price Per hour"
        android:textSize="4mm" />

    <TextView
        android:id="@+id/detailPrice"

        android:layout_width="183dp"
        android:layout_height="56dp"
        android:layout_below="@+id/detailName"
        android:layout_marginStart="-128dp"
        android:layout_marginLeft="-128dp"
        android:layout_marginTop="45dp"
        android:layout_toEndOf="@+id/detailImgView"
        android:layout_toRightOf="@+id/detailImgView"
        android:background="@drawable/edtxml"
        android:hint="Price per hour"

        android:textColor="#0C0708"
        android:textSize="4mm" />

    <TextView
        android:id="@+id/lbldesc"
        style="@style/TextandLayout"

        android:layout_width="169dp"
        android:layout_height="69dp"
        android:layout_below="@id/detailPrice"
        android:layout_alignStart="@+id/detailDescription"
        android:layout_alignLeft="@+id/detailDescription"
        android:layout_marginStart="-180dp"
        android:layout_marginLeft="-180dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/editxml1"
        android:text="Location"
        android:textSize="4mm" />

    <TextView
        android:id="@+id/detailDescription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailPrice"
        android:layout_marginStart="-126dp"
        android:layout_marginLeft="-126dp"
        android:layout_marginTop="31dp"
        android:layout_toEndOf="@+id/detailImgView"
        android:layout_toRightOf="@+id/detailImgView"
        android:background="@drawable/edtxml"
        android:hint="Manpower Location"
        android:textColor="#0C0708"
        android:textSize="4mm" />

    <Button
        android:id="@+id/dial"
        android:layout_width="88dp"
        android:layout_height="58dp"
        android:layout_alignStart="@+id/lbldesc"
        android:layout_alignLeft="@+id/lbldesc"
        android:layout_alignTop="@+id/lbldesc"
        android:layout_marginStart="155dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="103dp"
        android:background="@drawable/call"
        android:onClick="onDialBtn"
        android:text="." />

    <TextView
        android:id="@+id/lblname"
        android:layout_width="190dp"
        android:layout_height="65dp"
        android:layout_below="@+id/detailImgView"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="-38dp"
        android:layout_marginRight="-38dp"
        android:background="@drawable/editxml1"
        android:text="Manpower Name"
        android:textColor="@color/yello"
        android:textSize="4mm" />

    <TextView
        android:id="@+id/detailName"
        android:layout_width="211dp"
        android:layout_height="65dp"
        android:layout_below="@id/detailImgView"
        android:layout_alignEnd="@+id/lblname"
        android:layout_alignRight="@+id/lblname"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="-209dp"
        android:layout_marginRight="-209dp"
        android:background="@drawable/edtxml"
        android:hint="Manpower "
        android:textColor="#0C0708"
        android:textSize="4mm" />

</RelativeLayout>