<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainUI.NumReport">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/shareimage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"



            />



        <EditText
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_below="@+id/shareimage"

            android:layout_centerHorizontal="true"
            android:id="@+id/shareeventmoney"
            android:hint="Last Count of Item Purchased"
            android:textColorHint="@color/cardview_dark_background"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            tools:ignore="NotSibling" />





        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/sharebutton"
            android:layout_below="@+id/shareeventmoney"
            android:layout_marginTop="20dp"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Add Amount"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sharebutton"
            android:id="@+id/expensetitle"
            android:text="Number of items purchased"
            android:textSize="40dp"
            android:layout_centerHorizontal="true"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expensetitle"
            android:id="@+id/total"
            android:text="Total"
            android:textSize="40dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorAccent"

            />


    </RelativeLayout>


</ScrollView>